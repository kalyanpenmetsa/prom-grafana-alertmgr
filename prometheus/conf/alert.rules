groups:
- name: node_exporter
  rules:
  - alert: node_exporter
    expr: up < 1
    for: 10s
    labels:
      severity: critical
    annotations:
      summary: node_exporter status
      identifier: '{{ $labels.instance }}'
      description: '{{ $labels.job }} exporter job has been down for more than 1 minutes.'

- name: jmx_exporter
  rules:
  - alert: jmx_exporter
    expr: ({job="prometheus", __name__="go_gc_duration_seconds_count"}) > 1
    for: 10s
    labels:
      severity: critical
    annotations:
      summary: jmx_exporter down
      description: Some description {{ $labels.__name__ }}
